@model TargetProcessBugs.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login to TargetProcess</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "" }))
{    
    <div class="form-group row">
        <div class="col-md-12">
            @Html.LabelFor(x => x.Username, new { @class = "col-form-label" })
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12">
            @Html.LabelFor(x => x.Password, new { @class = "col-form-label" })
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type="password" })
        </div>    
    </div>
    <div class="form-group row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
}